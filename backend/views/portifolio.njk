{% extends "layout.njk" %}7

{% block head %}
  <title>Portifolio</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}

  <div id="wrapper">
    <h1>Aulas</h1>
  </div>

  <section class="cards">
    {%for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="image {{'featured-wrapper' if item.featured}} ">
          <img src="https://img.youtube.com/vi/{{item.id}}/0.jpg" alt="imagem de {{item.title}} "/>
          {% if item.featured %}
            <div class="featured">featured</div>
          {% endif %}
        </div>
        <div class="conteudo">
          <p>
            {{item.title}}
          </p>
        </div>
        <div class="info">
          <p>
            {{item.duration}}
          </p>
          <p class="price">
            {{item.price}}
          </p>
        </div>
      </div>
    {% endfor %}

  </section>

{% endblock %}