{% extends "layout.njk" %}7

{% block head %}
  <title>{{item.title}}</title>
{% endblock %}

{% block content %}

  <div id="wrapper" class="video">
    <h1>{{item.title}}</h1>
  </div>

  <section class="video">

    <div class="card" id="{{item.id}}">
      <div class="card_video ">
        <iframe class='iframe2' src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
      </div>
      <div class="conteudo">
        <p>
          {{item.title}}
        </p>
      </div>
      <div class="info">
        <p>
          {{item.duration}}
        </p>
        <p class="price">
          {{item.price}}
        </p>
      </div>
    </div>

  </section>

{% endblock %}